<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.pegasus.hojenaoapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".HojeNaoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/red_alarm_clock"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ClockActivity"
            android:screenOrientation="portrait">
        </activity>

        <receiver
            android:name=".ClockReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name=".EditClockActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_edit_clock"
            android:parentActivityName=".MainActivity" >
        </activity>

        <service
            android:name=".ClockService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
        </activity>

    </application>

</manifest>
